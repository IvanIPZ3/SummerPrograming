#include <stdio.h>
#include <windows.h>

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251); //Підключаємо кирилицю
    printf("Виконав Філоненко Іван\n");

    int t1, t2, t3;
    printf("Введіть час споживання торту кожним гостем:\n");
    scanf("%d %d %d", &t1, &t2, &t3);// Зчитуємо три числа з вхідного рядка і зберігаємо їх у змінних t1, t2, t3

  
    if (t1 > 1000 || t2 > 1000 || t3 > 1000) {
        printf("Час не повинен перевищувати 1000\n");   // Перевірка на максимальне значення 1000
        return 1;
    }

    double per_hour = 1.0 / t1 + 1.0 / t2 + 1.0 / t3; // Обчислюємо скільки пирога гості можуть з'їсти за 1 годину
    double time_to_eat_cake = 1.0 / per_hour; // Обчислюємо час, за який гості разом з'їдять пиріг

    printf("Час, необхідний для з'їдання пирога:%.2lf годин\n", time_to_eat_cake);
return 0;
}
